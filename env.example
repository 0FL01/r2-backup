# R2 Backup Script Configuration

# ======================
# REQUIRED PARAMETERS
# ======================
# Cloudflare R2 settings
R2_ENDPOINT="changeme"
R2_ACCESS_KEY_ID="changeme"
R2_SECRET_ACCESS_KEY="changeme"
R2_BUCKET_NAME="changeme"
R2_REGION="auto" # or a specific region like EEUR

# Paths to back up (comma-separated)
# Example: BACKUP_PATHS="/home/user/documents,/var/www,/etc/nginx,/home/user/projects"
BACKUP_PATHS=""

# ======================
# OPTIONAL PARAMETERS
# ======================
# Custom backup archive name (defaults to hostname if empty)
BACKUP_NAME=""

TEMP_DIR="/tmp/r2-backup"
# Toggle using TEMP_DIR for archive creation (true) or write in backup path (false)
USE_TEMP_DIR=true

# Toggle zstd compression (true = .tar.zst, false = plain .tar)
USE_ZSTD=true

# Zstd compression level (1-22, default is 3)
ZSTD_LEVEL=1

# Number of backups to keep (default is 7). Older ones are deleted.
KEEP_BACKUPS=7

# File paths
LOG_FILE="/var/log/r2-backup.log"

